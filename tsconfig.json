{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "isolatedModules": true,
    "types": ["node", "vitest"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
